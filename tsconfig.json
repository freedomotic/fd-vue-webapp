{
  "compilerOptions": {
    "allowJs": true,
    "sourceMap": true,
    "target": "es6",
    "strict": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "src/*": ["src/*"],
      "components/*": ["src/components/*"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
